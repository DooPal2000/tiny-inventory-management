<% layout('layouts/boilerplate')%>

<main class="px-3 py-5">
    <div class="container">
        <div class="text-center">
            <!-- 이미지 컨테이너 개선 -->
            <div class="hero-image-wrapper mb-4">
                <img src="img/vegetable.png" 
                     style="width:280px; height: 280px;" 
                     alt="TIM 로고"
                     class="hero-logo rounded-circle shadow-lg mx-auto d-block">
            </div>
            
            <!-- 타이틀 개선 -->
            <h1 class="display-4 fw-bold text-secondary mb-3">
                미니 재고관리
            </h1>
            
            <!-- 서브타이틀 개선 -->
            <p class="lead text-muted mb-4">
                <span class="fs-3 text-secondary">Tiny Inventory Management</span>
            </p>
            
            <!-- 환영 메시지 개선 -->
            <p class="fs-5 text-secondary mb-5">
                효율적인 재고관리를 위한<br>
                <strong class="text-secondary">스마트한 솔루션</strong>
            </p>
            
            <!-- 버튼 그룹 개선 -->
            <div class="d-grid gap-3 d-md-flex justify-content-md-center">
                <% if(!currentUser) { %>
                    <a href="/login" class="btn btn-primary btn-lg px-5 py-3 rounded-pill shadow">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        로그인하기
                    </a>
                <% } else if(currentUser.role=='user'){ %>
                    <a href="/products" class="btn btn-success btn-lg px-5 py-3 rounded-pill shadow">
                        <i class="fas fa-boxes me-2"></i>
                        재고 관리
                    </a>
                <% } else { %>
                    <a href="/admin" class="btn btn-danger btn-lg px-5 py-3 rounded-pill shadow">
                        <i class="fas fa-cog me-2"></i>
                        관리자 페이지
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</main>
